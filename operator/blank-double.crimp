crimp_primitive blank_double {
    int w
    int h
    double value
} image {
    /*
     * Create a blank double image (all pixels have the specified 'value').
     */

    crimp_image*     result;
    int              x, y;

    result = crimp_new_double (w, h);

    if (w && h) {
        for (y = 0; y < h; y++) {
	    for (x = 0; x < w; x++) {
	        DOUBLEP (result, x, y) = value;
	    }
        }
    }

    return result;
}

