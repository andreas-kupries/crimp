    test crimp-core-channels-2.$n {Accessors: channel names} -setup {
        set image [crimp read tcl $itype {{1 2} {3 4}}]
    } -body {
        crimp channels $image
    } -cleanup {
        unset image
    } -result $channels -constraints $cando
}

