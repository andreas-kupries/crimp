blank_float
int w
int h
float value

/*
 * Create a blank float image (all pixels have the specified 'value').
 */

crimp_image*     result;
int              x, y;

result = crimp_new_float (w, h);

for (y = 0; y < h; y++) {
    for (x = 0; x < w; x++) {
	FLOATP (result, x, y) = value;
    }
}

Tcl_SetObjResult(interp, crimp_new_image_obj (result));
return TCL_OK;


