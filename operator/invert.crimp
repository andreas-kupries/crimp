#
# Pixelwise inversion.
#
foreach type {
    float
    double
} {
    crimp_map_pixel $type invert {} $type { z = 1 - a; }
}
foreach type {
    grey8
    grey16
    grey32
} {
    set map [list GREY [string toupper $type]]
    crimp_map_pixel $type invert {} $type [string map $map {
	z = MAXVAL_GREY - a;
    }]
}

