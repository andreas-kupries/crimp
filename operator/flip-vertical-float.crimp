crimp_primitive flip_vertical_float {
    image_float image
} image {
    crimp_image* result;
    int          x, y;


    result = crimp_new_like (image);

    for (y = 0; y < crimp_h (image); y++) {
        for (x = 0; x < crimp_w (image); x++) {

	    FLOATP (result, x, y) = FLOATP (image, x, crimp_h (image) - y - 1);

        }
    }

    return result;

}

