salt_pepper_grey8
Tcl_Obj* imageObj
Tcl_Obj* imageRANObj
double value 

crimp_image* image;
crimp_image* image_random;
crimp_image* result;
int          x, y;
double       randval ;
crimp_input (imageObj   , image       , grey8);
crimp_input (imageRANObj, image_random, float);
result = crimp_new_grey8 (image->w, image->h);


for (y = 0; y < result->h; y++) {
    for (x = 0; x < result->w; x++) {
	    randval = FLOATP (image_random , x ,y);
		if ( (randval >= 0.0f ) && ( randval < (value/2) )  )
		GREY8 (result, x, y) = BLACK  ;
		
		else if ( (randval >= (value/2) ) && ( randval < value )   )
		GREY8 (result, x, y) = WHITE ;
		
		else
		GREY8 (result, x, y) = GREY8 (image , x ,y);
	}
}

Tcl_SetObjResult(interp, crimp_new_image_obj (result));
return TCL_OK;


