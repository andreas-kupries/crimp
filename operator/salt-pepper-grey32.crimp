salt_pepper_grey32
Tcl_Obj* imageXObj
double value 

crimp_image* imageX;
crimp_image* result;
int          x, y;
double       randval ;
crimp_input (imageXObj, imageX, grey32);
result = crimp_new_grey32 (imageX->w, imageX->h);

srand(time(NULL));

for (y = 0; y < result->h; y++) {
    for (x = 0; x < result->w; x++) {
	    randval= ( rand() / ( RAND_MAX + 1.0f ))  ;
		
		if ( (randval >= 0.0f ) && ( randval < (value/2) )  )
		GREY32 (result, x, y) = BLACK  ;
		
		else if ( (randval >= (value/2) ) && ( randval < value )   )
		GREY32 (result, x, y) = WHITE ;
		
		else
		GREY32 (result, x, y) = GREY32 (imageX , x ,y);
	}
}

Tcl_SetObjResult(interp, crimp_new_image_obj (result));
return TCL_OK;


